<script type="text/javascript">

var $pie = $('.pie');
//30天
var month = 30;

function start() {

  var svgCC = document.getElementById("svgcon");
  var circle = document.createElement("cicle");
  circle.setAttribute("r", '50');
  circle.setAttribute("cx", '58');
  circle.setAttribute("cy", '58');
  circle.setAttribute("stroke",'#009688');
  circle.setAttribute("start",'15');
  circle.setAttribute("end",'28');
  svgCC.appendChild(circle);





$pie.each(function() {
  var radius = $(this).attr('r'),
    circumference = 2 * Math.PI * radius,
    start_day = $(this).attr('start'),
    end_day = $(this).attr('end'),
    spend_day = end_day - start_day || 1,
    spend_day = circumference / 2 * spend_day / month;
  $(this).css({
    'stroke-dashoffset': (circumference / 2 * start_day / month) * -1,
    'stroke-dasharray': '' + spend_day + ' ' + circumference
  })

})
}
start();
</script>



